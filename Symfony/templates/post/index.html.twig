{% extends 'base.html.twig' %}

{% block title %}Aktualności{% endblock %}

{% block content %}
<div class="text-white page-full">

  <section class="main-articles container">
    <br>
    <h1 class="text-center text-white font-weight-bold">Aktualności</h1>
    <hr class="bg-white">
    <div class="row ">
    {% if posts %}
        {% for post in posts %}

        <div class="col-md-4">
          <br>
          <div class="card bg-dark border-secondary">

            <div class="card-body">
              <h5 class="card-title text-center">{{ post.title | upper }}</h5>
              {% if post.imageFilename %}
                <img src="/uploads/{{ post.imageFilename }}" class="card-img-top" width="300px" height="300px">
              {% else %}
                <p width="300px" height="300px">
                  {{ post.content|truncate(50)|raw }}
                </p>
              {% endif %}
              <br><br>
              <a href=" {{ url('post_show', {'id': post.id })}} " class="btn btn-block btn-outline-light font-weight-light">Szczegóły</a>
              {% if app.user %}
              <a href=" {{ url('post_edit', {'id': post.id })}} " class="btn btn-block btn-secondary font-weight-light">Edytuj</a>

              {% endif %}

            </div>
          </div>
          </div>

            {% endfor %}
      {% else %}
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <p class="text-white text-center">
        Brak postów do wyświetlenia.
        <br>
        <br>
        {% if app.user %}
          <a href="{{ path('post_new') }}" class="btn btn-success">
            Utwórz jeden
          </a>
        {% endif %}
        </p>
      </div>
      <div class="col-md-4"></div>
    {% endif %}
  </section>
  <br>


{% endblock %}
