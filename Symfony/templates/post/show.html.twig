{% extends 'base.html.twig' %}

{% block title %}Szczegóły{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Tytuł</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Zawartość</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Utworzono: </th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">Powrót do listy</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">Edytuj</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
